<h1>Eat-a-Burger</h1>

<h2>Your Current Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Your Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger-input">New Burger Name:</label>
    <input type="text" id="burger-input" name="burger-name">
  </div>

  <button type="submit">Add New Burger</button>
</form>
